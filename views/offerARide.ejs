<!-- offerARide.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Offer a Ride</title>
  <style>
    body {
font-family: Arial, sans-serif;
margin: 0;
padding: 0;
background-color: #f0f0f0;
}

header {
background-color: #009688;
color: white;
padding: 20px 0;
text-align: center;
}

header h1 {
margin: 0;
font-size: 32px;
}

main {
background-color: white;
padding: 20px 0;
text-align: center;
}

.container {
max-width: 800px;
margin: 0 auto;
padding: 0 20px;
}

form {
text-align: left;
}

.form-group {
margin-bottom: 20px;
}

.form-group label {
font-weight: bold;
}

.form-group input[type="date"],
.form-group input[type="time"],
.form-group input[type="text"] {
width: 100%;
padding: 10px;
border: 1px solid #ccc;
border-radius: 5px;
font-size: 16px;
}

button {
background-color: #009688;
color: white;
border: none;
padding: 15px 30px;
font-size: 18px;
border-radius: 5px;
cursor: pointer;
}

button:hover {
background-color: #00796b;
}

footer {
background-color: #009688;
color: white;
text-align: center;
padding: 10px 0;
}

</style>
</head>
<body>
  <h1>Offer a Ride</h1>
  <form action="/offer-a-ride" method="post">
    <div>
      <label for="source">Source:</label>
      <input type="text" id="source" name="source" required>
    </div>
    <div>
      <label for="destination">Destination:</label>
      <input type="text" id="destination" name="destination" value="Acropolis Institute of Technology and Research" readonly>
    </div>
    <div>
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
    </div>
    <div>
      <label for="availableSeats">Available Seats:</label>
      <input type="number" id="availableSeats" name="availableSeats" required>
    </div>
    <div>
      <label for="status">Status</label>
      <input type="text" id="status" name="status" required>
    </div>
    <button type="submit">Offer Ride</button>
  </form>
</body>
</html>
