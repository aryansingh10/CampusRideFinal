      transition: all 0.4s ease !important; 
      margin-right: 43px;
  }
  main .name-input:hover {
      border: 1px solid #d0d0d0;
    }
    
  main .name-input:active,
  main .name-input:focus {
      border: 1px solid #11939a;
    }
  main .signup-card {
    padding: 1rem;
    margin: auto;
    width: 43rem;
  }
  
  @media (max-height: 752px), screen and (min-width: 770px) {
    main .signup-card {
      height: 23rem !important;
    }
  }
  
  @media (min-height: 753px), screen and (max-width: 770px) {
    main .signup-card {
      height: calc(100vh - 100px - 3.33rem);
    }
  }
  
  @media (max-width: 770px) {
    main .signup-card {
      padding: 0;
      width: 100%;
    }
  }
  
  main .signup-card__header,
  main .signup-card h1 {
    font-weight: 300;
    font-size: 2rem;
    margin-bottom: 1rem;
    position: relative;
  }
  
