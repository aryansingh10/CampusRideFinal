  :root,
  body,
  html {
    font-family: "Poppins", sans-serif;
    font-size: 12px;
    margin: 0;
    padding: 0;
    letter-spacing: 0.02em;
    line-height: 1.2rem;
    background-color: #f1f1f1;
  }
  
  :root::-webkit-scrollbar,
  body::-webkit-scrollbar,
  html::-webkit-scrollbar {
    display: none;
  }
  
  :root ::-moz-selection,
  body ::-moz-selection,
  html ::-moz-selection {
    background-color: #11939a;
    color: #f1f1f1;
    padding: 0;
  }
  
  :root ::selection,
  body ::selection,
  html ::selection {
    background-color: #11939a;
    color: #f1f1f1;
    padding: 0;
  }
  
  .container {
    max-width: 100%;
    padding: 0 3rem;
  }
  
  @media (max-width: 770px) {
    .container {
      padding: 0 1rem;
    }
  }
  
  nav .funnel {
    height: 3.33rem;
    width: 100%;
    background: url("https://imgtr.ee/image/IJqh5o") center center repeat;
    background-size: 5rem;
  }
  
  @media (max-width: 770px) {
    nav .funnel {
      background: #000 !important;
    }
  }
  
  nav .logo {
    position: absolute;
    top: 2rem;
    width: 100%;
    height: 90px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
  }
  
  @media (max-width: 770px) {
    nav .logo {
      display: none;
    }
  }
  
  nav .logo img {
    background-color: #ffffff;
    padding: 1.5rem;
  }
  
  main {
    margin-top: 100px;
  }
  
  @media (max-width: 770px) {
    main {
      margin-top: 2rem;
    }
  }
