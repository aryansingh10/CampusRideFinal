  main .signup-card__input {
    display: inline-block;
    border: 1px solid #e5e5e4;
    color: #000;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    outline: none;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    padding: 1.25rem 1.5rem;
