<body>
  <nav>
      <div class="funnel"></div>
      <div class="logo">
          <img src="logo.png" style="height: 60%;"> <!-- Updated path to logo.png -->
      </div>
  </nav>

  <main class="container">
    <form class="signup-card" action="/register" method="post">
      <h1 class="signup-card__header">
          Sign up
      </h1>
      <input type="text" class="signup-card__input" name="username" placeholder="Username">
      <input type="text" class="signup-card__input" name="email" placeholder="Email">
      <input type="password" class="signup-card__input" name="password" placeholder="Password">
      
      <button class="signup-card__btn" type="submit"><span>Create</span></button>
     
     
    </form>
    <center>

    <span class="signup-card__ask">Already have an Account? <span class="alink"> <a href="/login" >Sign in</a></span></center>
  </main>


  <div class="main_footer">
      <div class="banner_img"></div>
      <div class="container footer">
          <div class="footer__logo">
              Campus-Ride
          </div>
          <div class="footer__devider">
          </div>
          <div class="footer__content">
